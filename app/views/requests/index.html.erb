
<h1>All open requests</h1>

<table class="table">
  <tr>
    <th>Date requested</th>
    <th>Name</th>
    <th>From</th>
    <th>Until</th>
    <th>Number of guests</th>
    <th>With children?</th>
    <th>Status</th>
    <th>Show</th>
    <th>Edit</th>
  </tr>

  <% @requests.each do |request| %>
    <tr>
      <td><%= request.created_at.to_date %></td>
      <td><%= request.name %></td>
      <td><%= request.startdate %></td>
      <td><%= request.enddate %></td>
      <td><%= request.noofguests %></td>
      <td><%= human_boolean(request.children) %></td>
      <td><%= request.approval_status %></td>
      <td><%= link_to 'Show', request_path(request) %></td>
      <td><%= link_to 'Edit', edit_request_path(request) %></td>
    </tr>
  <% end %>
</table>
<%= link_to 'Create new request', new_request_path %>
